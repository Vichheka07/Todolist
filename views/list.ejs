<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8" />
    <title>ToDo list</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    <div class="box">
        <%for (var i=0; i<newListItem.length; i++){%>
            <div class="check">
                <input type="checkbox">
                <p><%= newListItem[i]%></p>
            </div>
        <%}%>
        <form action="/" method="post">
            <input type="text" name="newItem" placeholder="សូមបញ្ចូលកត់ចំណាំ">
            <button type="submit" name="list" value=<%= listTitle %>>បញ្ចូល</button>
        </form>
    </div>
    
</body>
</html>